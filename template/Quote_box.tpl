<div class="quotebox" style="float: right; clear: right; margin: 0.5em 0 0.8em 1.4em; padding: 6px; border: solid 1px #aaa; font-size: 88%; background-color: #F9F9F9;
  @and($width, { width: $width; }) ">
  <div style="position: relative; text-align: left;">$quote</div>
  @and($source, {<cite style="display: block; text-align: right">$source</cite>})
</div>